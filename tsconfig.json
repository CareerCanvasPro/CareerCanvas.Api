{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es6"],
    "module": "commonjs",
    "noImplicitAny": false,
    "noLib": false,
    "outDir": "./lib",
    "paths": {
      "@career-canvas/*": ["./*"]
    },
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "typeRoots": ["types"]
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
