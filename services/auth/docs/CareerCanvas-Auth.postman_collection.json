{
  "info": {
    "name": "CareerCanvas Auth API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Traditional Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"name\": \"Test User\",\n  \"title\": \"Software Engineer\",\n  \"institution\": \"Tech Corp\",\n  \"location\": \"Dhaka, Bangladesh\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/auth/me",
            "headers": {
              "Authorization": "Bearer {{authToken}}"
            }
          }
        }
      ]
    },
    {
      "name": "Magic Link Auth",
      "item": [
        {
          "name": "Send Magic Link",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/auth/magic-link",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"method\": \"email\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Verify Magic Link",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/auth/verify-magic-link",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"{{magicLinkToken}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        }
      ]
    },
    {
      "name": "OTP Auth",
      "item": [
        {
          "name": "Send OTP",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/auth/otp",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phoneNumber\": \"+8801712345678\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Verify OTP",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/auth/verify-otp",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phoneNumber\": \"+8801712345678\",\n  \"code\": \"123456\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "if (pm.response.code === 200) {",
          "    const jsonData = pm.response.json();",
          "    if (jsonData.token) {",
          "        pm.environment.set(\"authToken\", jsonData.token);",
          "    }",
          "}"
        ]
      }
    }
  ]
}